{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        .uk-container{
            position: relative;
            width: 58%;
            padding: 10%;
            left: 0;
            top: 150px;
            background-color: white;
            border-radius: 34px;
            height: 67%;
            overflow: auto;
            border: 13px solid #fff;
        }
        .content-page{
            position: absolute;
            background-image: url('/uploads/competitions/fond/{{level.competition.fond}}');
            width: 100%;
            background-size: cover;
            height: 100%;
            background-position-x: center;
            background-position-y: center;
        }
        /*
            *  STYLE 2
            */

           .uk-container::-webkit-scrollbar-track
           {
                   -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
                   border-radius: 10px;
                   background-color: #F5F5F5;
           }

           .uk-container::-webkit-scrollbar
           {
                   width: 12px;
                   background-color: #F5F5F5;
           }

           .uk-container::-webkit-scrollbar-thumb
           {
                   border-radius: 10px;
                   -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
                   background-color: #D62929;
           }
           .logo-competition {
                width: 114px;
                height: 92px;
                margin-right: 46%;
                margin-top: -76px;
            }
        @media screen and (max-width: 400px){
            .logo-competition{
                width: 100px;
                height: 85px;
                margin-right: 33%;
                margin-top: 0;
           }
            .level-title{
                font-size: 20px;
                text-align: center;
            }
            .uk-container{
                top: 50px;
            }
        }
    </style>
{% endblock %}
{% block body %}
    <div class="uk-child-width-1-1@m" uk-grid style="text-align: right;direction: rtl;">
        <img src="{{ asset('uploads/competitions/logos/') }}{{level.competition.logo}}" class="logo-competition">
    <h1 class="level-title">{{ level.title }}</h1>
    <hr>
    {{ level.content | raw }}
    </div>
{% endblock %}
